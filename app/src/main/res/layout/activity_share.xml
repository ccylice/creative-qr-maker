<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/save_copy_activity"
    android:layout_marginLeft="53dp"
    android:layout_marginTop="47dp"
    android:layout_marginRight="53dp">


        <RelativeLayout
            android:id="@+id/text_create1"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true">
            <RelativeLayout
                android:layout_width="200dp"
                android:layout_height="36dp">
                <TextView
                    android:id="@+id/copy"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:layout_centerHorizontal="true"
                    android:background="@drawable/result_copy"
                    android:gravity="center"
                    android:text="@string/copy"
                    android:textColor="#3CB7D3"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </RelativeLayout>
            <RelativeLayout

                android:id="@+id/save_share"
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:background="@drawable/create_bg"
                android:elevation="10dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_baseline_share_24" />
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/save_share"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="28dp"
                android:text="@string/share"
                android:textColor="#999999"
                android:textSize="12sp"
                android:textStyle="bold" />
        </RelativeLayout>
</RelativeLayout>