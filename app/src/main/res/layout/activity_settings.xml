<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sp_bg"
    tools:context="ice.ccylice.creative.activity.SettingsActivity">

    <include
        android:id="@+id/head"
        layout="@layout/layout_create_toolbar" />

    <FrameLayout
        android:id="@+id/adView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/head"
        android:tag="big" />

    <ImageView
        android:id="@+id/ee"
        android:layout_width="200dp"
        android:layout_height="180dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="400dp"
        android:foregroundGravity="center_vertical|center|center_horizontal"
        android:src="@drawable/sp_logo" />

    <TextView
        android:id="@+id/setting_tv1"
        android:layout_width="150dp"
        android:layout_height="21dp"
        android:layout_below="@+id/ee"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal|center_vertical"
        android:text="@string/app_name"
        android:textColor="@color/textB"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/setting_tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/setting_tv1"

        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:gravity="center|center_horizontal|center_vertical"
        android:textColor="#999999"
        android:textSize="14sp"
        android:textStyle="bold" />

</RelativeLayout>