<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.QRcodeActivity">
    <include
        android:id="@+id/head"
        layout="@layout/layout_create_toolbar" />

    <RelativeLayout
        android:layout_width="328dp"
        android:layout_height="437dp"
        android:layout_below="@id/head"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="43dp"
        android:background="@drawable/shape_list_create_item"
        android:elevation="10dp">

        <ImageView
            android:id="@+id/qrcode_icon"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_marginLeft="44dp"
            android:layout_marginTop="25dp" />

        <TextView
            android:id="@+id/qrcode_tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="25dp"
            android:layout_toRightOf="@id/qrcode_icon"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/qrcode_tv2"
            android:layout_width="wrap_content"
            android:layout_height="14dp"
            android:layout_below="@id/qrcode_tv1"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/qrcode_icon"
            android:textColor="@color/textB"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/qrcode"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_below="@id/qrcode_icon"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="42dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_below="@id/qrcode"
            android:layout_marginLeft="36dp"
            android:layout_marginTop="50dp"
            android:layout_marginRight="36dp">

            <RelativeLayout
                android:id="@+id/sss"
                android:layout_width="128dp"
                android:layout_height="55dp">

                <TextView
                    android:id="@+id/save"
                    android:layout_width="100dp"
                    android:layout_height="42dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/create_bg"
                    android:elevation="5dp"
                    android:gravity="center"
                    android:text="@string/save"
                    android:textColor="@color/white" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="128dp"
                android:layout_height="55dp"
                android:layout_toRightOf="@id/sss">

                <TextView
                    android:id="@+id/share"
                    android:layout_width="100dp"
                    android:layout_height="42dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/create_bg"
                    android:elevation="5dp"
                    android:gravity="center"
                    android:text="@string/share"
                    android:textColor="@color/white" />

            </RelativeLayout>


        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>