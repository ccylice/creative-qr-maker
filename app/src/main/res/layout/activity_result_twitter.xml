<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sp_bg"
    tools:context=".save_activity.SaveTextActivity">

    <include
        android:id="@+id/head"
        layout="@layout/layout_create_toolbar" />


    <RelativeLayout
        android:layout_width="328dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="111dp"
        android:background="@drawable/shape_list_create_item"
        android:elevation="5dp">

        <TextView
            android:id="@+id/result_text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="51dp"
            android:text="@string/Twitter"
            android:textColor="#3CB7D3"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/result_twitter_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/result_text_title"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="48dp"
            android:layout_marginTop="23dp"
            android:layout_marginRight="48dp"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/copy"
            android:layout_width="200dp"
            android:layout_height="36dp"
            android:layout_below="@+id/result_twitter_tv"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:background="@drawable/result_copy"
            android:gravity="center"
            android:text="@string/copy"
            android:textColor="#3CB7D3"
            android:textSize="16sp"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/copy"
            android:layout_marginLeft="53dp"
            android:layout_marginTop="48dp"
            android:layout_marginRight="53dp">

            <RelativeLayout
                android:id="@+id/text_create"
                android:layout_width="90dp"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/Twitter_open"
                    android:layout_width="90dp"
                    android:layout_height="40dp"
                    android:background="@drawable/create_bg"
                    android:elevation="10dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/website" />
                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/Twitter_open"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="12dp"
                    android:text="@string/Open"
                    android:textColor="#999999"
                    android:textSize="12sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/text_create1"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_toRightOf="@id/text_create">

                <RelativeLayout
                    android:id="@+id/Twitter_share"
                    android:layout_width="90dp"
                    android:layout_height="40dp"
                    android:background="@drawable/create_bg"
                    android:elevation="10dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_baseline_share_24" />
                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/Twitter_share"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="28dp"
                    android:text="@string/share"
                    android:textColor="#999999"
                    android:textSize="12sp"
                    android:textStyle="bold" />

            </RelativeLayout>


        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="84dp"
        android:layout_height="84dp"
        android:layout_below="@id/head"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:background="@drawable/result_pic_bg"
        android:elevation="10dp">

        <ImageView
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_centerInParent="true"
            android:src="@drawable/twitter" />
    </RelativeLayout>

</RelativeLayout>